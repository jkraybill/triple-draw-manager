#!/bin/sh

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "ğŸš€ Running pre-commit checks..."

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

# Check if any JS files are being committed
JS_FILES=$(echo "$STAGED_FILES" | grep -E '\.(js|mjs)$' || true)

if [ -z "$JS_FILES" ]; then
  echo "${YELLOW}â„¹ï¸  No JavaScript files in commit, skipping checks${NC}"
  exit 0
fi

echo "ğŸ“ Found JavaScript files to check..."

# Run ESLint
echo "ğŸ” Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "${RED}âŒ ESLint failed! Please fix linting errors before committing.${NC}"
  echo "${YELLOW}ğŸ’¡ Tip: Run 'npm run lint -- --fix' to auto-fix some issues${NC}"
  exit 1
fi
echo "${GREEN}âœ… ESLint passed${NC}"

# Run Prettier check
echo "ğŸ’… Checking formatting..."
npx prettier --check "packages/**/*.{js,json,md}" > /dev/null 2>&1
if [ $? -ne 0 ]; then
  echo "${YELLOW}âš ï¸  Some files are not formatted properly${NC}"
  echo "${YELLOW}ğŸ’¡ Running formatter...${NC}"
  npm run format
  git add $STAGED_FILES
  echo "${GREEN}âœ… Files formatted and re-staged${NC}"
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm test
if [ $? -ne 0 ]; then
  echo "${RED}âŒ Tests failed! Please fix failing tests before committing.${NC}"
  echo "${YELLOW}ğŸ’¡ Tip: Run 'npm test' to see detailed output${NC}"
  exit 1
fi
echo "${GREEN}âœ… All tests passed${NC}"

echo "${GREEN}ğŸ‰ All pre-commit checks passed! Proceeding with commit...${NC}"
