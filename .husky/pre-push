#!/bin/sh

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "🚀 Running pre-push validation..."

# Run lint
echo "🔍 Final ESLint check..."
if ! npm run lint; then
  echo "${RED}❌ ESLint errors detected!${NC}"
  echo "${YELLOW}💡 Fix these before pushing to avoid CI failures${NC}"
  exit 1
fi
echo "${GREEN}✅ ESLint clean${NC}"

# Run tests
echo "🧪 Final test run..."
if ! npm test; then
  echo "${RED}❌ Tests are failing!${NC}"
  echo "${YELLOW}💡 Fix these before pushing to avoid CI failures${NC}"
  exit 1
fi
echo "${GREEN}✅ All tests passing${NC}"

echo "${GREEN}🎉 All checks passed! Pushing to remote...${NC}"