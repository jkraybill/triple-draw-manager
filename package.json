{
  "name": "@jkraybill/triple-draw-manager",
  "version": "0.1.0",
  "description": "Championship-grade single-table Deuce-to-Seven Triple Draw Lowball engine for Node.js with comprehensive position information and integer-validated betting",
  "main": "dist/index.cjs",
  "module": "packages/core/src/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "esbuild packages/core/src/index.js --bundle --platform=node --format=esm --outfile=dist/index.mjs --external:eventemitter3 --external:nanoid",
    "build:cjs": "esbuild packages/core/src/index.js --bundle --platform=node --format=cjs --outfile=dist/index.cjs --external:eventemitter3 --external:nanoid",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS=\"--unhandled-rejections=strict\" vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint packages/core/src --ext .js",
    "format": "prettier --write \"packages/**/*.{js,json,md}\"",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "keywords": [
    "poker",
    "deuce-to-seven",
    "triple-draw",
    "lowball",
    "game",
    "cards",
    "multiplayer",
    "api",
    "tournament",
    "championship",
    "position-information",
    "side-pots",
    "integer-validation",
    "event-driven",
    "nodejs"
  ],
  "author": "JK Raybill",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "import": "./packages/core/src/index.js",
      "require": "./dist/index.cjs",
      "types": "./packages/core/src/index.d.ts"
    },
    "./table": {
      "import": "./packages/core/src/Table.js",
      "require": "./dist/table.cjs"
    },
    "./player": {
      "import": "./packages/core/src/Player.js",
      "require": "./dist/player.cjs"
    },
    "./types": {
      "import": "./packages/core/src/types/index.js",
      "require": "./dist/types.cjs"
    },
    "./game/*": {
      "import": "./packages/core/src/game/*.js",
      "require": "./dist/game/*.cjs"
    },
    "./utils/*": {
      "import": "./packages/core/src/utils/*.js",
      "require": "./dist/utils/*.cjs"
    }
  },
  "files": [
    "packages/core/src",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkraybill/triple-draw-manager.git"
  },
  "bugs": {
    "url": "https://github.com/jkraybill/triple-draw-manager/issues"
  },
  "homepage": "https://github.com/jkraybill/triple-draw-manager#readme",
  "workspaces": [
    "packages/*"
  ]
}